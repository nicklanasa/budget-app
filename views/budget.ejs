    <div class="container-fluid">
      <div class="row pt-4">
          <div class="col-md-2">
            <div class="dropdown d-flex justify-content-end">
              <a class="btn btn-outline-primary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Menu
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="/">Balance</a>
                <a class="dropdown-item" href="budget">Budget</a>
              </div>
            </div>
          </div>
          <div class="col-md-7">
            <div class="card-group">
              <div class="card bg-light mb-3">
                <div class="card-body">
                  <h2 class="card-title">$0.00</h2>
                  <p class="card-text text-muted">Budgeted</p>
                </div>
              </div>
              <div class="card bg-light mb-3">
                <div class="card-body">
                  <h2 class="card-title text-danger">$0.00</h2>
                  <p class="card-text text-muted">Outgoing</p>
                </div>
              </div>
              <div class="card bg-light mb-3">
                <div class="card-body">
                  <h2 class="card-title text-success">$0.00</h2>
                  <p class="card-text text-muted">Incoming</p>
                </div>
              </div>
              <div class="card bg-light mb-3">
                <div class="card-body">
                  <h2 class="card-title">$0.00</h2>
                  <p class="card-text text-muted">To Be Budgeted</p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md">
